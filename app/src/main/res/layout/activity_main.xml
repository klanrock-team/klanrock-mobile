<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.poljie.android.belajar.klanrockstudio.MainActivity"
    android:background="@drawable/wallpaper">

    <Button
        android:id="@+id/button"
        android:layout_width="224dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="148dp"
        android:background="#424242"
        android:text="LOGIN"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/text_password"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:layout_gravity="right"
        android:layout_marginBottom="225dp"
        android:backgroundTint="@android:color/background_light"
        android:hint="Password"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="#ffff"
        android:textColorHint="@android:color/background_light"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/button" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignTop="@+id/text_password"
        android:background="@android:color/transparent"
        android:foregroundGravity="left"
        app:srcCompat="@drawable/ic_key"
        android:layout_alignLeft="@+id/imageButton"
        tools:ignore="NotSibling" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text_username"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="21dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_mail"
        tools:ignore="DuplicateIds"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="KlanRock"

        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text_username"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button"
        android:layout_gravity="right"
        android:layout_marginTop="224dp"
        android:backgroundTint="@android:color/background_light"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginBottom="80dp"
        android:text="Belum punya akun? Klik disini"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/imageButton" />


</RelativeLayout>
